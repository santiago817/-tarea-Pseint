Algoritmo sin_titulo
	Dimension matriz[4,4]
	Definir  fruta Como Caracter
	Definir  fila, columna Como Entero
	Definir  esta Como Logico
	
	Para f=0 hasta 3 Con Paso 1 Hacer
		Para c=0 Hasta 3 Con Paso 1 Hacer
			Escribir  ("ingresa nombre de las frutas")
			leer matriz[f,c]
		FinPara
	FinPara
	
	Escribir  ("escriba el nombre de la fruta q deseas")
	Leer  fruta
	esta = Falso
	Para f=0 hasta 3 Con Paso 1 Hacer
		Para c=0 Hasta 3 Con Paso 1 Hacer
			si (matriz[f,c]== fruta) Entonces
				fila = F
				columna = c
				esta = Verdadero
			FinSi
 			
		FinPara
		
	FinPara
	si (esta == Verdadero) Entonces
		
		Escribir  "encontramos la fruta en la posici√≥n "
		Escribir  "fila " , fila
		Escribir  "columna: " columna
	SiNo
		Escribir  " no encontramos la fruta q desea buscar"
	FinSi
	
FinAlgoritmo
